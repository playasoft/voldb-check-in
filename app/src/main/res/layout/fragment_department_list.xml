<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="departmentListViewModel"
            type="net.wetfish.playasoftvolunteers.ui.departments.DepartmentListViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.departments.DepartmentListFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_departments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:context="com.elifox.legocatalog.MainActivity"
            tools:listitem="@layout/list_item_department" />

        <ProgressBar
            android:id="@+id/pb_departments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:visibility="visible" />

    </RelativeLayout>

</layout>
